<?xml version="1.0"?>
<robot name="Workshop Arm">
  
  <material name="blue">
    <color rgba="0 0 0.8 1"/>
  </material>
  <material name="black">
    <color rgba="0 0 0 1"/>
  </material>
  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>
  <material name="yellow">
    <color rgba="0.9 0.9 0.1 1"/>
  </material>

  <link name="base_link">
    <visual>
      <geometry>
        <mesh filename="package://model/meshes/base_link.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="black"/>
    </visual>
  </link>

  <link name="link0">
    <visual>
      <geometry>
        <mesh filename="package://model/meshes/link0.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <material name="white"/>
    </visual>
  </link>

  <joint name="base_link_to_link0" type="fixed">
    <parent link="base_link"/>
    <child link="link0"/>
    <origin xyz="0 0 0"/>
  </joint>

</robot>
